                                            <a href="{{ path('cart_decrease', {id: item.product.id}) }}" class="bg-yellow-100 hover:bg-yellow-200 text-yellow-600 p-2 rounded-full transition">‚ûñ</a>
                                            <a href="{{ path('cart_remove', {id: item.product.id}) }}" class="bg-red-100 hover:bg-red-200 text-red-600 p-2 rounded-full transition">‚ùå</a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                
