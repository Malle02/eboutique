<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

    
    </head>
    {# <body class="bg-cover bg-center bg-no-repeat min-h-screen text-white" style="background-image: url('{{ asset('images/background.webp') }}'); background-attachment: fixed; background-color: #1a1a1a;"> #}
    <body class="bg-cover bg-center bg-no-repeat min-h-screen text-white" style="background-image: url('{{ asset('images/banner.webp') }}'); background-attachment: fixed; background-color: #1a1a1a;">


<nav class="bg-black bg-opacity-80 backdrop-blur-md fixed w-full top-0 left-0 z-50">
    <div class="container mx-auto px-6 py-4 flex justify-between items-center">
        
        <!-- LOGO -->
        <a href="{{ path('home') }}" class="text-2xl font-bold text-yellow-500 hover:text-yellow-400 transition">
            Mandingue-Chic
        </a>

        <!-- MENU NAVIGATION -->
        <ul class="hidden md:flex space-x-6">
            <li><a href="{{ path('home') }}" class="text-white hover:text-yellow-400 transition">Accueil</a></li>
            <li><a href="{{ path('product_list') }}" class="text-white hover:text-yellow-400 transition">Boutique</a></li>
            <li><a href="{{ path('account') }}" class="text-white hover:text-yellow-400 transition">Mon compte</a></li>
            {# <li><a href="{{ path('contact') }}" class="text-white hover:text-yellow-400 transition">Contact</a></li> #}
        </ul>

        <!-- SECTION UTILISATEUR -->
        <div class="flex items-center space-x-4">
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition">
                    D√©connexion
                </a>
            {% else %}
                <a href="{{ path('app_login') }}" class="bg-yellow-500 text-black px-4 py-2 rounded-lg hover:bg-yellow-600 transition">
                    Connexion
                </a>
            {% endif %}

            <!-- PANIER -->
            <a href="{{ path('cart_show') }}" class="relative">
                <span class="text-white hover:text-yellow-400 transition">üõí</span>
                <span class="absolute top-0 right-0 bg-red-500 text-white text-xs px-2 py-1 rounded-full">
                    {{ app.session.get('cart')|length }}
                </span>
            </a>
        </div>

        <!-- MENU BURGER POUR MOBILE -->
        <button class="md:hidden text-white" id="menu-toggle">
            ‚ò∞
        </button>
    </div>

    <!-- MENU MOBILE -->
    <div id="mobile-menu" class="hidden md:hidden bg-black bg-opacity-90 p-4 text-center">
        <a href="{{ path('home') }}" class="block text-white py-2">Accueil</a>
        <a href="{{ path('product_list') }}" class="block text-white py-2">Boutique</a>
        {# <a href="{{ path('contact') }}" class="block text-white py-2">Contact</a> #}
    </div>
</nav>


        {% block body %}{% endblock %}
    </body>

    <script>
    document.getElementById('menu-toggle').addEventListener('click', function () {
        let menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
    });
</script>

</html>
